        <script>
            var x=parseInt(lines[0]);
            var y=parseInt(lines[1]);
            var somaImparx=0;
            var somaImpary=0;
            
            while(x!==y){
                if(x<=y){
                 
                    x++;
                    if(x%2!==0){
                        somaImparx=somaImparx+x;
                    }

                }else{
                  
                    y++;
                    if(y%2!==0){
                        somaImpary=somaImpary+y;
                    }
                }
                
            }
            if(somaImparx>somaImpary){
            console.log(somaImparx);
            }else{
                console.log(somaImpary);
            }
       
       
       
       
       
       
       
       
       

        

       
        
       


        
